.resource-display.modal.full-screen(tabindex="-1", role="dialog")
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type="button", ng-click="$hide()") &times;
        h4.modal-title {{ctrl.resource.name}}
      .modal-body
        .block
          .title #{__('description')}
          | {{ctrl.resource.description}}
        .block
          .title #{__('administrators')}
          esn-resource-administrator-list(administrators="ctrl.resource.administrators")