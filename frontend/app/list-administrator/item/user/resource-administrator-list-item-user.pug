.administrator-container(ng-if="ctrl.administratorInfo")
  .pull-left.p-r-15
    esn-avatar(user-id="::ctrl.administrator.id")
  .media-body.clickable(ui-sref="profile({user_id: ctrl.administrator.id})")
    .lv-title
      h4.media-heading {{::ctrl.administratorInfo.firstname}} {{::ctrl.administratorInfo.lastname}}
      span
        a(ng-href='mailto:{{::ctrl.administratorInfo.emails[0]}}', op-inbox-compose) {{::ctrl.administratorInfo.emails[0]}}
