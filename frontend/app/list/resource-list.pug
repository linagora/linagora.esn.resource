.resource-list
  infinite-list(load-more-elements='ctrl.loadMoreElements()', scroll-inside-container="ctrl.scrollInsideContainer")
    div(ng-if="ctrl.elements.length > 0")
      esn-resource-list-item(resource='resource', ng-repeat="resource in ctrl.elements")
  .empty-message(ng-if="!ctrl.elements.length && ctrl.infiniteScrollCompleted")
    .message
      | #{__('No resources')}
  div(ng-if='ctrl.infiniteScrollDisabled')
    .text-center(openpaas-logo-spinner, spinner-start-active='1', spinner-size='0.5')
